<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post.PostTypeSelectFragment">

    <ImageButton
        android:id="@+id/btntypeImage"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/round_corner"
        android:src="@drawable/post_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btntypeAudio"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/round_corner"
        android:src="@drawable/post_audio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btntypeImage" />

    <ImageButton
        android:id="@+id/btntypeDraft"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/round_corner"
        android:src="@drawable/post_draft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btntypeVideo" />

    <ImageButton
        android:id="@+id/btntypeVideo"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/round_corner"
        android:src="@drawable/post_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>